{
  "compilerOptions": {
    "allowJs": true /* Enable incremental compilation */,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist" /* Redirect output structure to the directory. */,
    "moduleResolution": "node",
    "lib": ["es2015", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./src/**/*"]
}
